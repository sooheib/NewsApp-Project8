

    <resources>

        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
        </style>

        <!-- activity_main\RelativeLayout -->
        <style name="ActivityMain_RelativeLayout">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
            <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
            <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
            <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        </style>

        <!-- activity_main\ListView -->
        <style name="ActivityMain_ListView">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">match_parent</item>
        </style>

        <!-- news_list_item\LinearLayout -->
        <style name="NewsListItem_LinearLayout">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:orientation">vertical</item>
        </style>

        <!-- news_list_item\TitleTextView -->
        <style name="NewsListItem_TitleTextView">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
            <item name="android:text">@string/news_title</item>
            <item name="android:textAllCaps">true</item>
            <item name="android:textColor">@android:color/black</item>
            <item name="android:textSize">@dimen/text_title</item>
            <item name="android:textStyle">bold</item>
        </style>

        <!-- news_list_item\TitleTextViewValue -->
        <style name="NewsListItem_TitleTextViewValue">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:text">@string/news_title</item>
            <item name="android:textAllCaps">true</item>
            <item name="android:textColor">@android:color/holo_green_dark</item>
            <item name="android:textSize">@dimen/text_title</item>
            <item name="android:textStyle">bold</item>
        </style>

        <!-- news_list_item\SelectNameTextView -->
        <style name="NewsListItem_SelectNameTextView">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
            <item name="android:text">@string/news_select_name</item>
            <item name="android:textAllCaps">true</item>
            <item name="android:textColor">@android:color/black</item>
            <item name="android:textStyle">bold</item>
        </style>

        <!-- news_list_item\SelectNameTextViewValue -->
        <style name="NewsListItem_SelectNameTextViewValue">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
        </style>

        <!-- news_list_item\DateTextView -->
        <style name="NewsListItem_DateTextView">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
            <item name="android:text">@string/news_date</item>
            <item name="android:textAllCaps">true</item>
            <item name="android:textColor">@android:color/black</item>
            <item name="android:textStyle">bold</item>
        </style>

        <!-- news_list_item\DateTextViewValue -->
        <style name="NewsListItem_DateTextViewValue">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
        </style>

        <!-- news_list_item\LinkTextView -->
        <style name="NewsListItem_LinkTextView">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
            <item name="android:text">@string/news_web_url</item>
            <item name="android:textAllCaps">true</item>
            <item name="android:textColor">@android:color/black</item>
            <item name="android:textSize">@dimen/text_link</item>
            <item name="android:textStyle">bold</item>
        </style>

        <!-- news_list_item\LinkTextViewValue -->
        <style name="NewsListItem_LinkTextViewValue">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
            <item name="android:textColor">@android:color/holo_orange_dark</item>
            <item name="android:textSize">@dimen/text_link</item>
            <item name="android:textStyle">italic</item>
        </style>

    </resources>



